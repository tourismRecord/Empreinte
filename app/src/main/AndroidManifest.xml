<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nick.empreinte" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/title_bg" >
        <activity android:name=".Activity.LoginActivity"
            android:label="Empreinte"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.RegisterActivity"
            android:label="注册"
            android:launchMode="singleTask"></activity>
        <activity android:name=".Activity.ModifyInfoActivity"
            android:label="修改个人信息"
            android:launchMode="singleTask"></activity>
        <activity android:name=".Activity.MainActivity"
            android:label="分享圈"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".Activity.MyShareActivity"
            android:label="我的分享"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".Activity.MyShareContentActivity"
            android:label="我的分享内容"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".Activity.ShareContentActivity"
            android:label="分享内容"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".Activity.EditContentActivity"
            android:label="编写内容"
            android:launchMode="singleTask"></activity>
    </application>

</manifest>